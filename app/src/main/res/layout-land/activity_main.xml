<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:autofillHints="false"
        android:text="tap here"
        android:textAlignment="textEnd"
        android:textSize="64dp"></TextView>

 <TableLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
  android:layout_marginBottom="30dp"
  android:layout_alignParentBottom="true"
  >
  <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button

          android:id="@+id/clear"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="C"
          android:textColor="#FF03DAC5"
          android:textSize="30sp">

      </Button>

      <Button

          android:id="@+id/addBrackets"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="()"
          android:textColor="#FF03DAC5"
          android:textSize="30sp"></Button>

      <Button

          android:id="@+id/square"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="^"
          android:textColor="#FF03DAC5"
          android:textSize="30sp"></Button>

      <Button

          android:id="@+id/division"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="รท"
          android:textColor="#FF03DAC5"
          android:textSize="30sp">

      </Button>


      >

  </TableRow>

  <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button

          android:id="@+id/one"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="1"
          android:textColor="#FF03DAC5"
          android:textSize="30sp">

      </Button>

      <Button

          android:id="@+id/two"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="2"
          android:textColor="#FF03DAC5"
          android:textSize="30sp"></Button>

      <Button

          android:id="@+id/three"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="3"
          android:textColor="#FF03DAC5"
          android:textSize="30sp"></Button>

      <Button

          android:id="@+id/plus"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="+"
          android:textColor="#FF03DAC5"
          android:textSize="30sp">

      </Button>


   >

  </TableRow>


  <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button

          android:id="@+id/four"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="4"
          android:textColor="#FF03DAC5"
          android:textSize="30sp">

      </Button>

      <Button

          android:id="@+id/five"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="5"
          android:textColor="#FF03DAC5"
          android:textSize="30sp"></Button>

      <Button

          android:id="@+id/six"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="6"
          android:textColor="#FF03DAC5"
          android:textSize="30sp"></Button>

      <Button

          android:id="@+id/minus"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="-"
          android:textColor="#FF03DAC5"
          android:textSize="30sp">

      </Button>


   >

  </TableRow>
  <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button

          android:id="@+id/seven"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="7"
          android:textColor="#FF03DAC5"
          android:textSize="30sp">

      </Button>

      <Button

          android:id="@+id/eight"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="8"
          android:textColor="#FF03DAC5"
          android:textSize="30sp"></Button>

      <Button

          android:id="@+id/nine"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginEnd="3dp"
          android:layout_weight="1"
          android:backgroundTint="@color/red"
          android:onClick="anyBUtton"
          android:text="9"
          android:textColor="#FF03DAC5"
          android:textSize="30sp"></Button>

   <Button

       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="3dp"
       android:layout_marginEnd="3dp"
       android:layout_weight="1"
       android:backgroundTint="@color/red"
       android:onClick="anyBUtton"
       android:text="X"
       android:textColor="#FF03DAC5"
       android:textSize="30sp">

   </Button>


   >

  </TableRow>


     <TableRow
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <Button

             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="3dp"
             android:layout_marginEnd="3dp"
             android:layout_weight="1"
             android:backgroundTint="@color/red"
             android:onClick="anyBUtton"
             android:text="000"
             android:textColor="#FF03DAC5"
             android:textSize="30sp">

         </Button>

         <Button

             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="3dp"
             android:layout_marginEnd="3dp"
             android:layout_weight="1"
             android:backgroundTint="@color/red"
             android:onClick="anyBUtton"
             android:text="0"
             android:textColor="#FF03DAC5"
             android:textSize="30sp"></Button>

         <Button

             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="3dp"
             android:layout_marginEnd="3dp"
             android:layout_weight="1"
             android:backgroundTint="@color/red"
             android:onClick="anyBUtton"
             android:text="."
             android:textColor="#FF03DAC5"
             android:textSize="30sp"></Button>

         <Button

             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="3dp"
             android:layout_marginEnd="3dp"
             android:layout_weight="1"
             android:backgroundTint="@color/red"
             android:onClick="anyBUtton"
             android:text="="
             android:textColor="#FF03DAC5"
             android:textSize="30sp">

         </Button>


         >

     </TableRow>

 </TableLayout>
</RelativeLayout>